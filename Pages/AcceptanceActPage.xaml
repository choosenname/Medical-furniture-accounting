<Page x:Class="MedicalFurnitureAccounting.Pages.AcceptanceActPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Acceptance Act">
    <Grid Background="White" Width="800" Height="600">
        <!-- Заголовок -->
        <TextBlock Text="Акт приема-передачи" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,20"/>

        <!-- Таблица с данными -->
        <Grid Margin="60">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Данные акта -->
            <!-- Остальные TextBlock'и оставляем без изменений -->

            <!-- Подпись -->
            <TextBlock Text="Подпись получателя:" FontSize="16" FontWeight="Bold" Grid.Row="7" Margin="0,20"/>
            <Border Grid.Row="7" Grid.Column="1" Margin="10,0" BorderThickness="0,0,0,1" BorderBrush="Black" Width="120" HorizontalAlignment="Left">
            </Border>

            <!-- Кнопки -->
            <StackPanel Grid.Row="8" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20">
                <Button Content="Закрыть" Width="100" Margin="10" Style="{StaticResource ButtonStyle}" Click="CloseButton_Click"/>
                <Button Content="Export to Word" Width="150" Margin="10" Style="{StaticResource ButtonStyle}" Click="ExportAcceptanceAct_Click"/>
            </StackPanel>

        </Grid>
    </Grid>
</Page>
