<Window x:Class="MedicalFurnitureAccounting.ChangeShelvingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MedicalFurnitureAccounting"
        mc:Ignorable="d"
        Title="ChangeShelvingWindow" Height="250" Width="300">
    <StackPanel Margin="10">
        <Label Content="Выберите новый номер стелажа:" />
        <ComboBox x:Name="SelvingComboBox" Style="{StaticResource ComboBoxStyle}" Margin="10"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Отмена" Click="CancelButton_Click" Style="{StaticResource ButtonStyle}" />
            <Button Content="Сохранить" Click="SaveButton_Click" Style="{StaticResource ButtonStyle}" />
        </StackPanel>
    </StackPanel>
</Window>
