<Window x:Class="MedicalFurnitureAccounting.Modals.ChangeRoomModal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:MedicalFurnitureAccounting.Modals"
        mc:Ignorable="d"
        Title="ChangeRoomModal" Height="250" Width="300">
    <StackPanel>
        <Label Content="ADD SUPPLY" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"/>
        <Label Content="Enter New Room:" Margin="5"/>
        <TextBox x:Name="NewRoomTextBox" Style="{StaticResource TextBoxStyle}" Margin="5"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Height="30">
            <Button Content="Add" Style="{StaticResource ButtonStyle}" Click="AddButton_Click" />
            <Button Content="Cancel" Style="{StaticResource ButtonStyle}" Click="CancelButton_Click" />
        </StackPanel>
    </StackPanel>
</Window>
