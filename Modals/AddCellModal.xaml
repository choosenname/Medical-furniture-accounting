<Window x:Class="MedicalFurnitureAccounting.Modals.AddCellModal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:MedicalFurnitureAccounting.Modals"
        mc:Ignorable="d"
        Title="AddCellModal" Height="200" Width="300">
    <StackPanel>
        <Label Content="Добавление ячейки" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"/>
        <Label Content="Номер:" Margin="0 10 0 0"/>
        <TextBox x:Name="SupplierNameTextBox" Style="{StaticResource TextBoxStyle}" Margin="10" PreviewTextInput="NumberTextBox_PreviewTextInput" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Height="30">
            <Button Content="Добавить" Style="{StaticResource ButtonStyle}" Click="AddButton_Click" />
            <Button Content="Отмена" Style="{StaticResource ButtonStyle}" Click="CancelButton_Click" />
        </StackPanel>
    </StackPanel>
</Window>
