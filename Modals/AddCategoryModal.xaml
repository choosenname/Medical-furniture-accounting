<Window x:Class="MedicalFurnitureAccounting.Modals.AddCategoryModal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        mc:Ignorable="d"
        Title="AddCategoryModal" Height="200" Width="300">
    <StackPanel>
        <Label Content="Добавление категории" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"/>

        <!-- Применение стиля к Label -->
        <Label Content="Название категории:" Margin="0 10 0 0"/>
        <TextBox x:Name="CategoryNameTextBox" Margin="10" Style="{StaticResource TextBoxStyle}"/>
        <Label Content="Надбавка:" Margin="0 10 0 0"/>
        <TextBox x:Name="AllowanceNameTextBox" Margin="10" Style="{StaticResource TextBoxStyle}"/>


        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <!-- Применение стиля к Button -->
            <Button Content="Добавить" HorizontalAlignment="Center" Click="AddButton_Click" Style="{StaticResource ButtonStyle}"/>

            <!-- Применение стиля к Button -->
            <Button Content="Отмена" HorizontalAlignment="Center" Click="CancelButton_Click" Style="{StaticResource ButtonStyle}"/>
        </StackPanel>
    </StackPanel>
</Window>
