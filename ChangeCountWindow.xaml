<Window x:Class="MedicalFurnitureAccounting.ChangeCountWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="ChangeCountWindow" Height="200" Width="300">
    <StackPanel Margin="10">
        <Label Content="Введите новое количество:" />
        <TextBox x:Name="CountTextBox" Margin="0,10,0,0" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Отмена" Click="CancelButton_Click" Style="{StaticResource ButtonStyle}" />
            <Button Content="Сохранить" Click="SaveButton_Click" Style="{StaticResource ButtonStyle}" />
        </StackPanel>
    </StackPanel>
</Window>